---
import MainLayout from '../layouts/MainLayout.astro';
import LandingHero from '../components/LandingHero-2.astro';
import FeaturedGallery from '../components/FeaturedGallery.astro';
import FeaturedWorkScroll from '../components/FeaturedWorkScroll.astro';
import { Content as AboutPage } from '../content/about1.md';
const base = import.meta.env.BASE_URL;
---

<MainLayout>
	<section class="relative min-h-screen items-center flex py-20 md:py-16 overflow-hidden">
		<LandingHero />
		<FeaturedWorkScroll />
	</section>

	<section class="py-1">
		<div class="container-custom">
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
