					<AboutPage />
				</div>
				<div>
					<img
						src=`${base}images/captain.jpg`
						alt="Captain"
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4 transform transition hover:scale-[1.02] duration-300"
						width="720"
						height="720"
					/>
				</div>
			</div>
		</div>
	</section>

	<section class="py-16 sm:py-24">
		<div class="container mx-auto px-4 sm:px-6 lg:px-8">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
				<div class="flex flex-col space-y-6">
					<h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
						Concediti un giorno senza pensieri
					</h2>

